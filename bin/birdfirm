#!/bin/bash

declare -A birdfirm_cage_args
declare -A birdfirm_cage_executables
declare -a birdfirm_cage_names

birdfirm_cage(){
  local executable
  executable=$1; shift

  birdfirm_cage_names[${#birdfirm_cage_names[@]}]=$1
  birdfirm_cage_executables[$1]=$executable
  birdfirm_cage_args[$1]="$@"
}

birdfirm_main(){
  local root
  local bin
  local list
  local executable
  local path

  root=$HOME/.birdfirm
  bin=$root/bin
  rc=$root/rc
  list=$bin.txt

  if [ -f "$rc" ]; then
    . $rc
  fi

  while [ true ]; do
    birdfirm_build_hosts

    executable=$(cat $list | fzf)
    if [ -z "$executable" ]; then
      return
    else
      path=$bin/$executable
      if [ -f "$path" ]; then
        $path
      else
        birdfirm_execute_cage $executable
      fi
    fi
  done
}

birdfirm_build_hosts(){
  local cage_name

  rm -f $list

  for cage_name in ${birdfirm_cage_names[@]}; do
    echo "  $cage_name" >> $list
  done

  if [ -d "$bin" ]; then
    ls -1 $bin >> $list
  fi
}

birdfirm_execute_cage(){
  local executable
  local args

  executable=${birdfirm_cage_executables[$1]}
  args=${birdfirm_cage_args[$1]}

  $executable $args
}

birdfirm_main
